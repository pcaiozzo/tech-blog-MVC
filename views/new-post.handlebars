<div>
  <h2>Create New Post: </h2>
  <div>
    <label for="title">Post Title: </label>
    <input
      name="title"
      type="text"
      placeholder="Enter Title"
      id="title-field"
    />
  </div>
  <div>
    <label for="content">Content: </label>
    <textarea
      name="content"
      type="text"
      placeholder="Start Here"
      id="content-field"
    ></textarea>
  </div>
  <button id="submit-btn">Submit</button>
</div>

<script src="../js/new.js"></script>